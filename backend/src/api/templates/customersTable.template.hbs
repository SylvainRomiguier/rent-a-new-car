<div class="table-wrapper" id="customersTable">
  <table class="fl-table">
    <thead>
      <tr>
        <th>ID</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Address</th>
        <th colspan="2">Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each customers}}
        <tr style="cursor: pointer;">
          <td>{{id}}</td>
          <td>{{firstName}}</td>
          <td>{{lastName}}</td>
          <td>{{email}}</td>
          <td>{{phone}}</td>
          <td>
            <div>{{address.street}}</div>
            <div>{{address.city}}</div>
            <div>{{address.postalCode}}</div>
            <div>{{address.country}}</div>
          </td>
          <td><button
              class="outline"
              onclick="editCustomer('{{json this}}')"
            >Edit</button></td>
          <td><button
              class="outline secondary"
              onclick="deleteCustomer('{{id}}')"
            >Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>